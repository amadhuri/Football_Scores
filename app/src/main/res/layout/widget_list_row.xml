<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#993300">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="@dimen/TeamNames"
        android:layout_alignParentLeft="true"
        android:text="left"
        android:id="@+id/home_name"
        android:textColor="#ffffff"
        android:paddingLeft="@dimen/widget_margin"
        android:paddingRight="@dimen/widget_margin"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:paddingLeft="@dimen/widget_margin"
        android:paddingRight="@dimen/widget_margin"
        android:id="@+id/score_layout"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/test_text"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/widget_score"
            android:id="@+id/score_textview"
            android:textColor="#ffffff" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/test_text"
            android:textSize="@dimen/widget_time"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/data_textview"
            android:textColor="#ffffff" />
    </LinearLayout>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_alignParentRight="true"
    android:text="righttttttttttttttttttttttttttttttttttttttttttttttt"
    android:textSize="@dimen/TeamNames"
    android:id="@+id/away_name"
    android:textColor="#ffffff"
    android:paddingLeft="@dimen/widget_margin"
    android:layout_toRightOf="@id/score_layout"
    />

</RelativeLayout>


